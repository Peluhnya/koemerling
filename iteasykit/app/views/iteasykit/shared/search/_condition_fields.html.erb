<div class="field">
  <%= f.attribute_fields do |a| %>
    <div class="col-md-4">
      <div class="form-group">
        <%= a.attribute_select({associations: [:category]}, {class: "form-control material input-warning"}) %>
      </div>
    </div>
  <% end %>
  <div class="col-md-4">
    <div class="form-group">
      <%= f.predicate_select Hash.new, class: "form-control material input-warning" %>
    </div>
  </div>
  <div class="col-md-3">

    <div class="form-group">
      <%= f.value_fields do |v| %>

        <%= v.text_field :value, class: "form-control material input-warning", placeholder: 'Value' %>

      <% end %>
    </div>
  </div>
  <div class="col-md-1">

    <div class="form-group">
      <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, '#', class: "remove_fields" %>
    </div>
  </div>
</div>