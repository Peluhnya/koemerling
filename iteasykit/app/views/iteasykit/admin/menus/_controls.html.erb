
     <%= link_to '<i class="zmdi zmdi-edit"></i>'.html_safe, "",
                              'data-toggle'=>"modal", 'data-target'=>"#modal-large#{item.id}" %>
<%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, admin_menu_item_url(item), :method => :delete, :data => {:confirm => 'Are you sure?'} %>
<div class="modal fade" id="modal-large<%=item.id %>" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="<%= t('close') %>"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= t('edit_item') %> - <%= item.name %></h4>
      </div>

      <div class="modal-body">
                 <%= render 'form_item', locals: @menu_item = item %>
                 </div>
      <div class="modal-footer">
     
        <button type="button" class="btn btn-lg btn-default m-b-5" data-dismiss="modal"><%= t('close') %></button>
      </div>
    
    </div>
  </div>
              </div>