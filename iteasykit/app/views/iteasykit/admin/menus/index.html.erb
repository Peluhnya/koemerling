<% content_for :entity_title do %><%= t('list_menu') %>
<% end %>
<% content_for :pull_right do %>

<% end %>

<p><%= t(:help_list_menu) %></p>
<%= link_to t('new_menu'), new_admin_menu_path, class: "btn btn-success waves-effect",
            style: 'color: white!important;' %> <br/><br/>
<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('description') %></th>
    <th><%= t('active') %></th>
    <th><%= t('machine_name') %></th>
    <th><%= t('element_html') %></th>
    <th><%= t('id_element') %></th>
    <th><%= t('class_element') %></th>
    <th><%= t('action') %></th>
  </tr>
  </thead>
  <tbody>
  <% @menus.each do |menu| %>
    <tr>
      <td><%= link_to menu.name, edit_admin_menu_path(menu) %></td>
      <td><%= menu.description %></td>
      <td><i class="zmdi zmdi-<%= menu.active ? 'check' : 'close' %>"></i></td>
      <td><%= menu.machine_name %></td>
      <td><%= menu.elementcls %></td>
      <td><%= menu.idcls %></td>
      <td><%= menu.csscls %></td>
      <td class="text-center">
        <%= link_to '<i class="zmdi zmdi-playlist-plus"></i>'.html_safe, edit_admin_menu_path(menu), class: "btn btn-success raised icon waves-effect" %>
        <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, [:admin, menu], class: "btn btn-danger raised icon waves-effect", method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

