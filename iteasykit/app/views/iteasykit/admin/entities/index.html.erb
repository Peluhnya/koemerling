<% content_for :entity_title do %>List all entities
<% end %>
<% content_for :pull_right do %>

<% end %>


<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>Machine name</th>
    <th>Entity type</th>
    <th>Active</th>
    <th>Sticky</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @entities.each do |entity| %>
    <tr>
      <td><%= entity.machine_name %></td>
      <td><%= entity.iteasykit_entity_type.name %></td>
      <td><i class="zmdi zmdi-<%= entity.active ? 'check' : 'close' %>"></i></td>
      <td><i class="zmdi zmdi-<%= entity.sticky ? 'check' : 'close' %>"></i></td>
      <td class="text-center">
        <%= link_to '<i class="zmdi zmdi-edit"></i>'.html_safe, edit_admin_entity_path(entity), class: "btn btn-success raised icon waves-effect" %>
        <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, [:admin, entity], class: "btn btn-danger raised icon waves-effect", method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entity', new_entity_path, class: "btn btn-success btn-lg", style: 'color: white!important;' %>
